{
  "compilerOptions": {
    "baseUrl": "src",             // Root for imports
    "jsx": "react-jsx",           // Supports React
    "esModuleInterop": true,      // Allows default imports
    "resolveJsonModule": true,    // Enables importing JSON files
    "types": ["node"]             // Add this line
  },
  "include": ["src/**/*", "scratch.ts"] // Add scratch.ts if not in src
}